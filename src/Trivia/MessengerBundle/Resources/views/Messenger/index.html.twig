{% extends 'TriviaMessengerBundle:Messenger:base.html.twig' %}


        {% block title %}Main{% endblock %}


        {% block content %}
        {% if is_granted('ROLE_USER') %}
         {% for message in pagination %}
               <tr {% if not message.is_read %}class="success" {% endif %}>
                   <td>{{ message.name }} -> {{ message.recipient }}</td>
                   <td>{{ message.text }}</td>
                   <td><a href="messages/view/{{ message.id }}">View</a></td>
               </tr>

         {% endfor %}

        <div class='btn btn-success'><a href="{{ path('trivia_messenger_create') }}">Create new message</a></div>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
        {% endif %}
        {% endblock %}

