{% extends 'TriviaMessengerBundle:Messenger:base.html.twig' %}
{% block title %}New message{% endblock %}
{% block content %}
    <form method="post" {{ form_enctype(form) }} action="{{ path('trivia_messenger_create') }}">
        {{ form_errors(form) }}

        {{ form_row(form.toUser) }}
        {{ form_row(form.text) }}
        {{ form_rest(form) }}
        <input type="submit" />
    </form>
    <a href="{{ path('trivia_messenger_homepage') }}">Back to main</a>
{% endblock %}
