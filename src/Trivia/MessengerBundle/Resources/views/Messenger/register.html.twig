{% extends 'TriviaMessengerBundle:Messenger:base.html.twig' %}
{% form_theme form 'BcBootstrapBundle:Form:form_div_layout.html.twig' %}
{% block title %}Register{% endblock %}
{% block content %}
    <form method="post" action="{{ path('trivia_messenger_register') }}" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password.first,  { 'label':'Enter password'}) }}
        {{ form_row(form.password.second,  { 'label':'Repeat password'}) }}
        {{ form_rest(form) }}
        <br />
        <input type="submit" class="btn" value="Register!">
    </form>
{% endblock %}
